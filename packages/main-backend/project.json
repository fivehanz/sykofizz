{
  "name": "main-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/main-backend/src",
  "projectType": "application",
  "targets": {
    "prisma-init": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/main-backend",
        "command": "prisma init"
      }
    },
    "prisma-format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/main-backend",
        "command": "prisma format"
      }
    },
    "prisma-migrate-dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/main-backend",
        "command": "prisma migrate dev"
      }
    },
    "prisma-studio": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/main-backend",
        "command": "prisma studio"
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/packages/main-backend",
        "main": "packages/main-backend/src/main.ts",
        "tsConfig": "packages/main-backend/tsconfig.app.json",
        "assets": ["packages/main-backend/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "packages/main-backend/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "main-backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "main-backend:build:development"
        },
        "production": {
          "buildTarget": "main-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/main-backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/main-backend/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f packages/main-backend/Dockerfile . -t main-backend"
    }
  },
  "tags": []
}
