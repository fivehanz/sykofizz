---
import Layout from '../layouts/Layout.astro';
---

<Layout title="welcome to sykofizz.">
	<main>
		<h1>welcome to <span class="text-gradient">sykofizz</span></h1>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
		display: flex;
		align-items: center;
		justify-content: center;
		height: 95vh;
	}

	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
